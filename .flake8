[flake8]
max-line-length = 120
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    node_modules,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .coverage,
    coverage.xml,
    lambda_functions/*/boto3,
    lambda_functions/*/botocore,
    lambda_functions/*/dateutil,
    lambda_functions/*/jmespath,
    lambda_functions/*/s3transfer,
    lambda_functions/*/urllib3,
    lambda_functions/*/six.py,
    lambda_functions/*/cv2,
    lambda_functions/*/numpy,
    lambda_functions/*/PIL,
    lambda_functions/*/opencv_python_headless*,
    lambda_functions/*/numpy-*,
    lambda_functions/*/Pillow-*,
    lambda_functions/*/six-*,
    lambda_functions/*/python_dateutil-*,
    lambda_functions/*/jmespath-*,
    lambda_functions/*/s3transfer-*,
    lambda_functions/*/urllib3-*,
    lambda_functions/*/boto3-*,
    lambda_functions/*/botocore-*
ignore = 
    E501,  # line too long
    W503,  # line break before binary operator
    E203,  # whitespace before ':'
    F401,  # imported but unused (for __init__.py files)
    F403,  # wildcard import
    E722,  # do not use bare except
    W291,  # trailing whitespace
    W293,  # blank line contains whitespace
    E731,  # do not assign a lambda expression, use a def
    C901,  # too complex
    R0913, # too many arguments
    R0914, # too many local variables
    R0915, # too many statements
per-file-ignores =
    __init__.py:F401
    lambda_functions/*/handler.py:E722,C901
max-complexity = 10 